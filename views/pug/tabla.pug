extends template 

block tabla 
    main 
        div(class="row justify-content-center") 
            h3(class="mb-3 text-center") Lista de productos
            if products.length > 0
                div(class="col-4") 
                    table(class="table")
                        thead 
                            tr 
                                th(scope="col") Nombre 
                                th(scope="col") Precio 
                                th(scope="col") Foto 
                        tbody 
                            each product in products
                                tr 
                                    th(scope="row")=product.title 
                                    td=product.price 
                                    td 
                                        img(src=product.thumbnail, alt=product.title+" foto", class="img-fluid", style="width: 50px; height: 50px") 
            else 
                div(class="col-2 alert alert-dark mt-3", role="alert") No hay productos 
        div(class="col-12 d-flex justify-content-center")
            a(href="./", class="btn btn-primary text-white") Agregar producto